    private void cmdfactActionPerformed(java.awt.event.ActionEvent evt) {                                        
        int f=1,n,i=1;
        n=Integer.parseInt(txtnum.getText());
        do{
            f=f*i;
            i=i+1;
        }while(i<=n);

        txtarea1.append("Factorial of "+n+" = "+f+"\n");
}                                       

    private void cmdarmActionPerformed(java.awt.event.ActionEvent evt) {                                       
        int n,r,sum,temp;
        n=Integer.parseInt(txtnum.getText());
        sum=0;r=0;temp=n;
        while(n>0) {
            r=n%10;
            sum=sum+r*r*r;
            n=n/10;
        }if(temp==sum)
            txtarea1.append(temp+" is an Armstrong number"+"\n");
        else
            txtarea1.append(temp+" is not an Armstrong number"+"\n");
}                                      

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        txtarea1.setText(" ");
}                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        JOptionPane.showMessageDialog(this," THANKS FOR USING ");
        System.exit(0);
}                                        

    private void cmdrevnoActionPerformed(java.awt.event.ActionEvent evt) {                                         
   int n,r,revno,temp;
    n=Integer.parseInt(txtnum.getText());
    revno=0;r=0;temp=n;
    while(n>0)
    {
            r=n%10;
            revno=revno*10+r;
            n=n/10;
    }
    txtarea1.append("Reveresed number ="+revno+"\n");
    if(temp==revno)
    txtarea1.append(temp+" Palindrome number"+"\n");
else
    txtarea1.append(" Not a Palindrome number"+"\n");

}                                        

    private void cmdfibActionPerformed(java.awt.event.ActionEvent evt) {                                       
      int n,i=1,fno=-1,sno=1,sum=0;
       n=Integer.parseInt(txtnum.getText());
      while(i<=n)
      {
          sum=fno+sno;
       txtarea1.append(sum+"\n");
       i++;
       fno=sno;
       sno=sum;
        }

}                                      

    private void cmdsumo1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int n,i,j;
        n=Integer.parseInt(txtnum.getText());
        i=2; j=n/2;
        while(i<=j)
        {
            if(n%i==0)
                break;
            i++;
        }
        if(i>j)
            txtarea1.append(" is a Prime number"+"\n");
        else
            txtarea1.append(" is not a Prime number"+"\n");
    }                                        

    private void cmdsnActionPerformed(java.awt.event.ActionEvent evt) {                                      
       int n,r,sum=0,p;
       n=Integer.parseInt(txtnum.getText());
       while(n>0)
       {
           r=n/10;
           p=n%10;
           sum=p+r;
  
           txtarea1.append("Sum of number ="+sum);
       }
}                                     

